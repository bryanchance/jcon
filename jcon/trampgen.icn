	[ 1,     "?", "Select",       "vDescriptor", ["Val", "vValue"] ],
	[ 1,     "!", "Bang",         "vDescriptor", ["Val", "vDescriptor"] ],

	[ 2,    "[]", "Index",        "vDescriptor", ["Val", "vValue"] ],
