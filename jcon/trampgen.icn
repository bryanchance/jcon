	[ 2,    "~=", "NUnequal",     "vNumeric"    ],
	[ 2,    ">=", "NGreaterEq",   "vNumeric"    ],
	[ 2,     ">", "NGreater",     "vNumeric"    ],

	[ 2,    "<<", "LLess",        "vString"     ],
