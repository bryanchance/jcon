	[ 7,        , "Call",         "vDescriptor" ],
	[ 8,        , "Call",         "vDescriptor" ],
	[ 9,        , "Call",         "vDescriptor" ],
	[10,        , "Call",         "vDescriptor" ],

	[ 1,     ".", "Deref",        "vValue"      ],
	[ 2,    ":=", "Assign",       "vVariable"   ],
	[ 2,   ":=:", "Swap",         "vVariable"   ],
	[ 2,    ":?", "SubjAssign",   "vVariable"   ],
	[ 2,    "<-", "RevAssign",    "vDescriptor" ],
