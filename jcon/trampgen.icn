	[ 1,     "+", "Numerate",     "vNumeric"    ],
	[ 1,     "-", "Negate",       "vNumeric"    ],
	[ 1,     "*", "Size",         "vInteger"    ],
	[ 1,     "~", "Complement",   "vValue"      ],
