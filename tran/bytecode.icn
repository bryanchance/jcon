procedure cp_Class(c, name_index)
    local s

    s := "j_CONSTANT_Class" || "," || name_index
    if /c.constant_table[s] then {
        put(c.constant_pool,
        c.constant_table[s]:= j_CONSTANT_Class(name_index, *c.constant_pool))
    }
