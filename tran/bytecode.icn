procedure ipush(x, classptr)
    case x of {
    -1 :    return j_iconst_m1()
    0 : return j_iconst_0()
    1 : return j_iconst_1()
    2 : return j_iconst_2()
    3 : return j_iconst_3()
    4 : return j_iconst_4()
    5 : return j_iconst_5()
    }
    if -128 <= x <= 127 then return j_bipush(x)
    if -32768 <= x <= 32767 then return j_sipush(x)
    if -2147483648 <= x <= 2147483647 then {
        return j_ldc_w(cp_Integer(classptr, x))
    }
    runerr(500, x)
end

