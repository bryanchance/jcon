# record ir_Succeed( expr continuation )
procedure gen_bc_ir_Succeed(s, p)
    local r, e, PC, k, a

    PC := PC_fieldref(bc_proc_classptr)
    if \p.continuation then {
        \bc_save_restore_flag | runerr(500)

        put(s, j_aload_0())
        gen_bc(s, p.continuation)
        put(s, j_putfield(PC))

        bc_save_tmps(s)
        bc_save_tmpj_labels(s)
        bc_save_tmpclosures(s)
    } else {
        put(s, j_aload_0())
        put(s, j_iconst_0())
        put(s, j_putfield(PC))
    }
    gen_bc(s, p.expr)
    put(s, j_areturn())
    return s
end

