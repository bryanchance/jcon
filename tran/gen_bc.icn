procedure transfer_to(s, p)
    case type(p) of {
    default: runerr(500, p)
    "ir_Label" : {
        put(s, j_goto_w(\bc_ir2bc_j_labels[p]) ) | runerr(500, p)
    }
    "ir_TmpLabel": {
        gen_bc_rval(s, p)
        put(s, j_goto_w(bc_switch_j_label) )
    }
    }
    return s
end

procedure conditional_transfer_to(s, p, cond, notcond)
    local tmp

    case type(p) of {
    default: runerr(500, p)
    "ir_Label" : {
        put(s, cond(\bc_ir2bc_j_labels[p]) ) | runerr(500, p)
    }
    "ir_TmpLabel": {
        tmp := j_label()
        put(s, notcond(tmp))
        gen_bc_rval(s, p)
        put(s, j_goto_w(bc_switch_j_label) )
        put(s, tmp)
    }
    }
    return s
end

# assign top-of-stack to p
procedure gen_bc_assign_to(s, p)
    local assign

    case type(p) of {
    default: { runerr(500, p) }
    "ir_Tmp": {
        gen_bc_ir_Tmp_assign(s, p)
    }
    "ir_TmpLabel": {
        gen_bc_ir_TmpLabel_assign(s, p)
    }
    "ir_TmpClosure": {
        gen_bc_ir_TmpClosure_assign(s, p)
    }
    "ir_Var" |
    "ir_Key": {
        gen_bc(s, p)
        assign := Assign_methodref(bc_proc_classptr)
        put(s, j_swap())
        put(s, j_invokevirtual(assign))
        put(s, j_Pop())
    }
    }
    return s
end


# record ir_Free( v )
procedure gen_bc_ir_Free(s, p)
    local free, c, lab

    free := Free_methodref(bc_proc_classptr)
    every c := !p.v.clo do {
        lab := j_label()
        gen_bc_ir_TmpClosure_rval(s, c)
        put(s, j_ifnull(lab))
        gen_bc_ir_TmpClosure_rval(s, c)
        put(s, j_invokevirtual(free))
        put(s, j_aconst_null() )
        gen_bc_ir_TmpClosure_assign(s, c)
        put(s, lab)
    }
    return s
end

# record ir_Coord( coord )
procedure gen_bc_ir_Coord(s, p)
    local f, line, column, field

    /nodebuginfo | return s

    if f := cp_String(bc_proc_classptr,
              cp_Utf8(bc_proc_classptr, \(\p.coord).file)) then {
        field := file_fieldref(bc_proc_classptr)
        put(s, j_aload_0())
        put(s, j_ldc_w(f))
        put(s, j_putfield(field))
    }
    if line := \(\p.coord).line then {
        field := line_fieldref(bc_proc_classptr)
        put(s, j_aload_0())
        put(s, ipush(line, bc_proc_classptr))
        put(s, j_putfield(field))
    }
    return s
end

