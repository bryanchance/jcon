# record ir_EnterInit( startj_label )
procedure gen_bc_ir_EnterInit(s, p)
    local target, initialized

    create_field(bc_proc_classptr, 8, "initialized", "Z")
    initialized := create_fieldref(bc_proc_classptr, "initialized", "Z",
                                   bc_proc_classname)
    put(s, j_getstatic(initialized))
    target := j_label()
    put(s, j_ifeq(target))
    transfer_to(s, p.startj_label )
    put(s, target)
    put(s, j_iconst_1())
    put(s, j_putstatic(initialized))
    return s
end

