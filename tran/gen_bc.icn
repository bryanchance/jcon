    "ir_TmpClosure" : /bc_tmpclosure_table[op.name] := *bc_tmpclosure_table
    "ir_Var" : {
                     insert(bc_var_set, op.name)
                     /bc_var_table[op.name] := *bc_var_table
    }
    }
end

