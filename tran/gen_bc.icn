        optable[1]["#"] := "oLimit"
        optable[1]["."] := "oDeref"
        optable[1]["/"] := "oIsNull"
        optable[1]["\\"] := "oIsntNull"
        optable[1]["*"] := "oSize"
        optable[1]["?"] := "oSelect"
        optable[1]["+"] := "oNumerate"
        optable[1]["-"] := "oNegate"
        optable[1]["~"] := "oComplement"
        optable[1]["^"] := "oRefresh"
        optable[2][":="] := "oAssign"
        optable[2][":=:"] := "oSwap"
        optable[2]["&"] := "oConjunction"
        optable[2]["."] := "oField"
        optable[2]["[]"] := "oIndex"
        optable[2]["+"] := "oAdd"
        optable[2]["-"] := "oSub"
        optable[2]["*"] := "oMul"
        optable[2]["/"] := "oDiv"
        optable[2]["%"] := "oMod"
        optable[2]["^"] := "oPower"
        optable[2]["**"] := "oIntersect"
        optable[2]["++"] := "oUnion"
        optable[2]["--"] := "oDiff"
        optable[2]["<"] := "oNLess"
        optable[2]["<="] := "oNLessEq"
        optable[2]["="] := "oNEqual"
        optable[2]["~="] := "oNUnequal"
        optable[2][">="] := "oNGreaterEq"
        optable[2][">"] := "oNGreater"
        optable[2]["<<"] := "oLLess"
        optable[2]["<<="] := "oLLessEq"
        optable[2]["=="] := "oLEqual"
        optable[2]["~=="] := "oLUnequal"
        optable[2][">>="] := "oLGreaterEq"
        optable[2][">>"] := "oLGreater"
        optable[2]["==="] := "oVEqual"
