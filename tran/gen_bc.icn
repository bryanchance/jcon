procedure gen_bc_call_op(s, p)
    local r, l, f, v, n, i, method

    type(p.fn) == "ir_Operator" | runerr(500, p.fn)

    gen_bc(s, p.fn)
    args := ""
    every i := 1 to *p.argList do {
        gen_bc(s, p.argList[i])
        args ||:= "Lrts/vDescriptor;"
    }
    put(s, j_aload_0())
    method := create_methodref(bc_proc_classptr, "instantiate",
                               "(" || args || "Lrts/iClosure;)Lrts/iClosure;",
                               "rts/vDescriptor")
    put(s, j_invokevirtual(method))
    gen_bc_assign_to(s, p.lhs)
    return s
end

# record ir_OpFunction( lhs fn argList failLabel )
procedure gen_bc_ir_OpFunction(s, p)
    local target, args, method, class, i, op, field
    static optable
    initial optable := initoptable()

    p.fn.arity = *p.argList | runerr(500, p)
    op := \optable[p.fn.arity][p.fn.name] | runerr(500, p.fn)

    class := case p.fn.arity of {
        1 : "rts/iUnaryClosure"
        2 : "rts/iBinaryClosure"
        3 : "rts/iTrinaryClosure"
        default : runerr(500)
        }
    field := create_fieldref(bc_proc_classptr, "instance", "L" || class || ";",
                             "rts/" || op)
    put(s, j_getstatic(field) )

    args := ""
    every i := 1 to *p.argList do {
        gen_bc(s, p.argList[i])
        args ||:= "Lrts/vDescriptor;"
    }
    put(s, j_aload_0())
    args ||:= "Lrts/iClosure;"
    method := create_methodref(bc_proc_classptr, "call",
                               "(" || args || ")Lrts/vDescriptor;", class)
    put(s, j_invokevirtual(method))

    if \p.failLabel then {
        if \p.lhs then {
            put(s, j_dup())
            target := j_label()
            put(s, j_ifnonnull(target))
            put(s, j_Pop())
            transfer_to(s, p.failLabel)
            put(s, target)
            gen_bc_assign_to(s, p.lhs)
        } else {
            conditional_transfer_to(s, p.failLabel, j_ifnull, j_ifnonnull)
        }
    } else {
        if \p.lhs then {
            gen_bc_assign_to(s, p.lhs)
        } else {
            put(s, j_Pop())
        }
    }
    return s
end

# record ir_MakeClosure( lhs fn argList )
procedure gen_bc_ir_MakeClosure(s, p)
    local r, l, f, v, n, i, method

    \p.lhs | return ""

    if type(p.fn) == "ir_Operator" then {
        return gen_bc_call_op(s, p)
    }

    gen_bc(s, p.fn)
    put(s, ipush(*p.argList))
    method := ArgArray_methodref(bc_proc_classptr)
    put(s, j_invokestatic(method))

    every i := 1 to *p.argList do {
        put(s, j_dup())
        put(s, ipush(i-1))
        gen_bc(s, p.argList[i])
        put(s, j_aastore())
    }
    put(s, j_aload_0())
    method := Instantiate_methodref(bc_proc_classptr)
    put(s, j_invokestatic(method))
    gen_bc_assign_to(s, p.lhs)
    return s
end

